{% extends template('widget') %}

{% define data = {
    disabled: _widget.disabled,
    isMultiCartAllowed: _widget.isMultiCartAllowed,
    carts: _widget.carts
} %}

{% block body %}
    {% if data.isMultiCartAllowed %}
    <div class="grid grid--middle grid--justify">
        <div class="col col--sm-12 col--md-5 col--right">
        {% if data.carts %}
            {% include molecule('add-to-cart-selector', 'MultiCartWidget') with {
                data: {
                    carts: data.carts,
                    disabled: data.disabled
                }
            } only %}
        {% endif %}
        </div>
        {{ widget('SharedCartAddSeparateProductWidgetPlugin') }}
    </div>
    {% endif %}
{% endblock %}
