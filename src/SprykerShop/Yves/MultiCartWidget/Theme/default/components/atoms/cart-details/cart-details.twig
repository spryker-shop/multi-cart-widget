{% extends model('component') %}

{% define config = {
    name: 'cart-details',
    tag: 'div'
} %}

{% define data = {
    cart: required
} %}

{% set itemAmount = data.cart.items | length %}

{% block body %}
    {% if itemAmount > 0 %}
    <span class="float-right">
        {{ itemAmount }} {{ itemAmount == 1 ? 'multi_cart_widget.cart.item' | trans : 'multi_cart_widget.cart.items' | trans }} | {{ data.cart.totals.subTotal | money }}<br>
        {% if data.cart.isDefault == false %}
            <a href="{{ path('multi-cart/set-default', {quoteName: data.cart.name}) }}">
                {{ 'multi_cart_widget.cart.action.set_default' | trans }}
            </a>
        {% else %}
            ({{ 'multi_cart_widget.cart.default' | trans }})
        {% endif %}
    </span>
    {% endif %}
    <span>{{ data.cart.name }}</span>
{% endblock %}
