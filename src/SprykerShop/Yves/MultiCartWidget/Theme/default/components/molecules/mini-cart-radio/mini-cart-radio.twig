{% extends model('component') %}

{% define config = {
    name: 'mini-cart-radio',
    tag: 'mini-cart-radio',
} %}

{% define data = {
    idCart: required,
    isDefault: required,
} %}

{% block body %}
    {% widget 'MiniCartSingleWidget' args [data.idCart] only %}
    {% endwidget %}

    {% embed atom('radio') with {
        attributes: {
            name: 'cart-isDefault',
            checked: data.isDefault,
            'data-href': path('multi-cart/set-default', {idQuote: data.idCart}),
        },
        embed: {
            inputClass: config.jsName ~ '__input',
        },
    } only %}
        {% block inputClass %}{{ embed.inputClass }}{% endblock %}
    {% endembed %}
{% endblock %}
