{% extends template('widget') %}

{% define data = {
    idButtonDisabled: _widget.idButtonDisabled,
    isMultiCartAllowed: _widget.isMultiCartAllowed,
    carts: _widget.cartCollection
} %}

{% block body %}
    {% if data.isMultiCartAllowed is not empty and data.carts | length > 0 %}
        {% include molecule('add-to-cart-seletor', 'MultiCartWidget') with {
            data: {
                idButtonDisabled: data.idButtonDisabled,
                carts: data.carts
            }
        } only %}
    {% endif %}
{% endblock %}
